<h1>Admins</h1>

<table class="table table-striped">
  <thead>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Email</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @admins.each do |admin| %>
      <tr>
        <td><%=  admin.id %></td>
        <td><%=  admin.name %></td>
        <td><%=  admin.email %></td>
        <% if admin.id != 1 %>
            <td><%= button_to 'Destroy', admin, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger custom2" %></td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>

<%= button_to 'Back', admin_path(current_user[:id]), method: :get, class: "btn btn-primary col1" %>
