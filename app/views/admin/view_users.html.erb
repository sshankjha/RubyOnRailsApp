<h1>Users</h1>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Phone</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%=  user.name %></td>
        <td><%=  user.email %></td>
        <td><%=  user.phone %></td>
        <td><%= button_to 'Accounts', account_path(:id => user.id), method: :get, class:"btn btn-primary custom2"%></td>
        <td><%= link_to 'Transactions',user_trans_path(:user_id => user.id), class:"btn btn-primary custom2"%></td>
        <td><%= button_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger custom2"%></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= button_to 'Back', admin_path(current_user[:id]), method: :get, class: "btn btn-primary col1" %>
