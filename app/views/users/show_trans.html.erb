<h2>My Transactions</h2>

<table class="table table-striped">
  <thead>
  <tr>
    <th class="col1">From</th>
    <th class="col1">To</th>
    <th class="col1">Amount</th>
    <th class="col1">Type</th>
    <th class="col1">Status</th>
  </tr>
  </thead>

  <tbody>
  <% if @transactions %>
      <% @transactions.each do |transaction| %>
          <tr>
            <td><%= transaction.from %></td>
            <td><%= transaction.to %></td>
            <td><%= transaction.amount%></td>
            <td><%= transaction.kind.upcase_first%></td>
            <td><%= transaction.state.upcase_first%></td>
          </tr>
      <% end %>
  <% end %>
  </tbody>
</table>

<br>
<p>
  <%= link_to 'Back', user_path %>
</p>
