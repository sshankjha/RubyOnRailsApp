<%= javascript_include_tag "application" %>

<div class="col-sm-6">
<div class="jumbotron">
  <p>
    <strong>Name:</strong>
    <%= @user.name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @user.email %>
  </p>

  <p>
    <strong>Phone:</strong>
    <%= @user.phone %>
  </p>
</div>
</div>

<div class="col-sm-4">
  <br><br>
<div class="btn-group">
  <%= button_to 'Request for an account', new_account_url, method: :get, class: "btn btn-primary custom3" %>
  <br>
  <%= button_to 'View your accounts', account_path, method: :get, class: "btn btn-primary custom3" %>
  <br>
  <%= button_to 'View your Friends', friends_path(@user), method: :get, class: "btn btn btn-info custom3"%>
  <br>
  <%= link_to 'View your borrow requests', borrows_path(:user_id => @user.id), method: :get, class: "btn btn btn-info custom3"%>
</div>
</div>



