<p id="notice"><%= notice %></p>

<h1>Transfers on this account</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>From</th>
      <th>To</th>
      <th>State</th>
      <th>Amount</th>
      <th>Added</th>
      <th>Confirmed</th>
      <th colspan="0"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <% if transaction.kind == 'transfer' %>
          <td><%= transaction.from %></td>
          <td><%= transaction.to %></td>
          <td><%= transaction.state.capitalize %></td>
          <td><%= transaction.amount %></td>
          <td><%= transaction.added %></td>
          <td><%= transaction.confirmed %></td>
          <td><%= link_to 'Show', transaction %></td>
          <% if transaction.state == 'pending' %>
            <td><%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
    <% @transactions2.each do |transaction| %>
      <tr>
        <% if transaction.kind == 'transfer' %>
            <td><%= transaction.from %></td>
            <td><%= transaction.to %></td>
            <td><%= transaction.state.capitalize %></td>
            <td><%= transaction.amount %></td>
            <td><%= transaction.added %></td>
            <td><%= transaction.confirmed %></td>
            <td><%= link_to 'Show', transaction %></td>
            <% if transaction.state == 'pending' %>
                <td><%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<h1>Withdraws and deposits on this account</h1>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Kind</th>
    <th>State</th>
    <th>Amount</th>
    <th>Added</th>
    <th>Confirmed</th>
    <th colspan="0"></th>
  </tr>
  </thead>

  <tbody>
  <% @transactions.each do |transaction| %>
      <tr>
        <% if transaction.kind == 'deposit' or transaction.kind == 'withdraw' %>
            <td><%= transaction.kind.capitalize %></td>
            <td><%= transaction.state.capitalize %></td>
            <td><%= transaction.amount %></td>
            <td><%= transaction.added %></td>
            <td><%= transaction.confirmed %></td>
            <td><%= link_to 'Show', transaction %></td>
            <% if transaction.state == 'pending' %>
                <td><%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>

<h1>Lends</h1>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Friend name</th>
    <th>Their account number</th>
    <th>Your account number</th>
    <th>Amount</th>
    <th>State</th>
    <th colspan="0"></th>
  </tr>
  </thead>

  <tbody>
  <% @lends.each do |borrow| %>
      <tr>
        <% if borrow.state == 'accepted'  %>
            <td><%= borrow.user_name %></td>
            <td><%= borrow.from_acc %></td>
            <td><%= borrow.to_acc %></td>
            <td><%= borrow.amount %></td>
            <td><%= borrow.state %></td>
        <%end%>
      </tr>
  <% end %>
  </tbody>
</table>

<h1>Borrows</h1>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Friend name</th>
    <th>Their account number</th>
    <th>Your account number</th>
    <th>Amount</th>
    <th>State</th>
    <th colspan="0"></th>
  </tr>
  </thead>

  <tbody>
  <% @borrows.each do |borrow| %>
      <tr>
        <% if borrow.state == 'accepted' && borrow.user_id == current_user[:id] %>
            <td><%= borrow.user_name %></td>
            <td><%= borrow.from_acc %></td>
            <td><%= borrow.to_acc %></td>
            <td><%= borrow.amount %></td>
            <td><%= borrow.state %></td>
        <%end%>
      </tr>
  <% end %>
  </tbody>
</table>


<br>

